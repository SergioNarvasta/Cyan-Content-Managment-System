<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CyanCMS.WebPlatform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
   
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CyanCMS.WebPlatform.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-rI9T/nkwl1xHNPCkyU7p9Unlv7IwLaUJ5z9egzLPnJ0eZ+Ks+fFQAZ9KLwz5R5bI" crossorigin="anonymous" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-center">
                <a class="navbar-brand ms-3" asp-area="" asp-controller="Home" asp-action="Index">@ViewBag.nomcia</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex ">
                    <ul class="navbar-nav flex-grow-1 align-content-center">
                        <li class="nav-item">
                            <a id="ReqCompra" class="nav-link text-dark" asp-area="" asp-controller="Company" asp-action="Index">Compañias</a>
                        </li>
                        <li class="nav-item">
                            <a id="ReqCompra" class="nav-link text-dark" asp-area="" asp-controller="OrdenCompra" asp-action="Index">Orden Compra</a>
                        </li>
                    </ul>
                    @* <partial name="_LoginPartial"> *@
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
           
            @* await Html.PartialAsync("_Sidebar") *@

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CyanCMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
